    }

    .register li a:hover{
            background-color: red;
            color: pink;
            transform: scale(2);
            cursor: pointer;


    }
    .ftn{
     font-family:sans-serif;
     position:relative;
     font-size:10px;
     top:20px ;
     color:black;
     list-style-type: none;
     text-decoration: none;
    }

    .columns {
        float: left;
        display: flex;
        height: 70vh;
        padding: 8px;
        margin-left: 45px
    }

    .price {
        list-style-type: none;
        border: 1px solid #eee;
        margin: 0;
        padding: 0;
        -webkit-transition: 0.3s;
        transition: 0.3s;
    }

        .price:hover {
            box-shadow: 0 8px 12px 0 rgb(15, 24, 194, 0.25)
        }

        .price .header {
            background-color: #111;
            color: white;
            font-size: 25px;
        }

        .price li {
            border-bottom: 1px solid #eee;
            padding: 20px;
            text-align: center;
            font-family: sans-serif;
        }

        .price .grey {
            background-color: #eee;
            font-size: 20px;
            border: 1px solid BLACK;
        }

    .button {
        background-color: black;
        color: white;
        padding: 10px 25px;
        text-align: center;
        text-decoration: none;
        font-size: 18px;
    }

        .button:hover {
            background-color: palevioletred;
            color: white;
            transform: scale(1.2);
        }

    .rp {
        display: flex;
        background-color: dimgray;
    }



</style>



@if(Model.erormessage.Length >0) {
    
    <div> <strong>@Model.erormessage </strong></div>

}


@if (Model.successmessage.Length > 0)
{

